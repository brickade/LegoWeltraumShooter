#version 330 core

// Interpolated values from the vertex shaders
in vec3 Normal;
in vec4 Position;

// Values that stay constant for the whole mesh.
uniform vec4 Color;


void main()
{
	gl_FragData[0] = Color * dot(Normal, vec3(-1,0,0));
	gl_FragData[1] = vec4(Normal,1);
	gl_FragData[2] = Position;
}