#version 330 core

in vec2 UV;
in vec4 Color;
in vec3 Normal;
in vec3 Position;

uniform sampler2D Diffuse;


void main()
{

	vec4 blend = texture2D( Diffuse, UV );
	float diff = length(vec2(0.5,0.5)-UV);
	
	vec4 c = vec4(0,0,1,1.0);
	c.g += 1.0-diff*1.5;
	c.a -= diff*2;
	c.a *= Color.a;
	if(c.a < 0.1)
		discard;
	gl_FragData[0] = c;
	gl_FragData[1] = (vec4(-1,0,0,0)+1)/2;
}